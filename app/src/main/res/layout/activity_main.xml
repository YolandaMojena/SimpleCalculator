<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#ff090917">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="0.50">

        <TextView
            android:id = "@+id/display"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="40sp"
            android:text="0"
            android:textColor="#ffffff"
            android:background="#63193147"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_weight="0.1">

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "MC"
            android:onClick="MCPressed"
            android:textColor="#ffff8000"
            android:textSize="30dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnMC"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "MR"
            android:onClick="MRPressed"
            android:textColor="#ffff8000"
            android:textSize="30dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnMR"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "M+"
            android:onClick="MAPressed"
            android:textColor="#ffff8000"
            android:textSize="30dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnMA"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "M-"
            android:onClick="MSPressed"
            android:textColor="#ffff8000"
            android:textSize="30dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnMS"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1.33"
            android:text = "C"
            android:onClick="clearPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnC"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_weight=".1">

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "7"
            android:onClick="numberPressed"
            android:id="@+id/btn7"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "8"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn8"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "9"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn9"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "/"
            android:onClick="operatorPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnDiv"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_weight=".1">

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "4"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn4"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "5"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn5"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "6"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn6"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "*"
            android:onClick="operatorPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnMul"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dip"
        android:layout_weight=".1">

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text="1"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn1"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text="2"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn2"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text="3"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn3"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "-"
            android:onClick="operatorPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnSub"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".1">

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text="."
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btnDot"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text="0"
            android:onClick="numberPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#cf313142"
            android:id="@+id/btn0"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text="="
            android:onClick="equalPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnEqu"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />

        <Button
            android:layout_height="fill_parent"
            android:layout_width="0pt"
            android:layout_weight="1"
            android:text = "+"
            android:onClick="operatorPressed"
            android:textColor="#ffffffff"
            android:textSize="35dip"
            android:background="#d23f3f4a"
            android:id="@+id/btnAdd"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp" />
    </LinearLayout>


</LinearLayout>